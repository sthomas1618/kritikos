<script type="text/json" id="bootstrap">
  {
    "clock": <%= @clock.to_json() %>
  }
</script>

<%= content_for :javascript do -%>
  <script type="text/javascript">
    $(function () {
    	var div = $('<div></div>');
      div.html($('#bootstrap').text());
      var data = JSON.parse(div.text());
      
      Kritikos.initialize(data);
    });
  </script>
<% end %>
